<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="SaborSostenibleFrontEnd.InsertSurpriseBagPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="#F5F5F5"
    Title="Subir bolsa sorpresa">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- HEADER -->
        <Grid
            Grid.Row="0"
            BackgroundColor="#2E7D32"
            Padding="0,0,0,4"
            HeightRequest="50">
            <Label
                Grid.Column="1"
                Text="Subir bolsa sorpresa"
                FontSize="16"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
        </Grid>

        <!-- CONTENT -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout
                Padding="2"
                Spacing="7">

                <Frame
                    Margin="20,50"
                    Padding="24"
                    CornerRadius="12"
                    HasShadow="True"
                    BackgroundColor="White"
                    BorderColor="Transparent">

                    <VerticalStackLayout Spacing="7">
                        <!-- Descripción -->
                        <VerticalStackLayout Spacing="7">
                            <Label
                                Text="Descripción"
                                FontSize="12"
                                FontAttributes="Bold"
                                TextColor="Black" />
                            <Entry
                                x:Name="DescriptionEntry"
                                Placeholder="Descripción bolsa sorpresa"
                                FontSize="11"
                                HeightRequest="40" />
                        </VerticalStackLayout>

                        <!-- Toggle Donación -->
                        <VerticalStackLayout Spacing="7">
                            <HorizontalStackLayout Spacing="100" VerticalOptions="Center">
                                <Label
                                    Text="Donación"
                                    FontSize="12"
                                    FontAttributes="Bold"
                                    TextColor="Black"
                                    VerticalOptions="Center" />
                                <Switch
                                    x:Name="DonationSwitch"
                                    Toggled="OnDonationToggled"
                                    ThumbColor="White"
                                    OnColor="#2E7D32" />
                            </HorizontalStackLayout>

                            <!-- Condicional: Precio vs Banco -->
                            <VerticalStackLayout Spacing="8">
                                <!-- Precio -->
                                <StackLayout
                                    x:Name="PriceContainer"
                                    Spacing="0"
                                    IsVisible="True">
                                    <Label
                                        Text="Precio"
                                        FontSize="12"
                                        FontAttributes="Bold"
                                        TextColor="Black" />
                                    <Entry
                                        x:Name="PriceEntry"
                                        Placeholder="0.00"
                                        Keyboard="Numeric"
                                        FontSize="12"
                                        HeightRequest="40"
                                        HorizontalOptions="FillAndExpand" />
                                </StackLayout>

                                <!-- Banco de alimentos -->
                                <StackLayout
                                    x:Name="FoodBankContainer"
                                    Spacing="0"
                                    IsVisible="False">
                                    <Label
                                        Text="Seleccione el banco de alimentos a donar"
                                        FontSize="12"
                                        FontAttributes="Bold"
                                        TextColor="Black" />
                                    <Picker
                                        x:Name="FoodBankPicker"
                                        Title="Seleccione un banco de alimentos"
                                        FontSize="11"
                                        HeightRequest="40"
                                        HorizontalOptions="FillAndExpand" />
                                </StackLayout>
                            </VerticalStackLayout>
                        </VerticalStackLayout>

                        <!-- Botón Registrar -->
                        <Button
                            Text="Registrar"
                            FontSize="14"
                            FontAttributes="Bold"
                            HeightRequest="40"
                            CornerRadius="8"
                            BackgroundColor="#2E7D32"
                            TextColor="White"
                            Clicked="OnRegisterClicked"
                            HorizontalOptions="FillAndExpand" />
                        
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>

        <!-- (sin footer; el botón ya está dentro del card) -->
    </Grid>
</ContentPage>
