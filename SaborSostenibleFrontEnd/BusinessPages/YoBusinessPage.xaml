                        FontAttributes="Bold"
                        CornerRadius="8"
                        HeightRequest="36"
                        FontSize="12"
                        HorizontalOptions="FillAndExpand"/>

                    <!-- InformaciÃ³n de la app -->
                    <VerticalStackLayout Spacing="10" Margin="0,20,0,0">
