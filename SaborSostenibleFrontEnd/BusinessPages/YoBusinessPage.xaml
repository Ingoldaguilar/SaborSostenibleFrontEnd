                        HorizontalOptions="Center"
                        BorderColor="Transparent">
                        <Label
                            Text="&#xf007;"
                            FontFamily="FontAwesome"
                            FontSize="36"
                            TextColor="#789262"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>
                    </Frame>

                    <!-- Rol -->
                    <Frame
                        BackgroundColor="#789262"
                        CornerRadius="12"
                        Margin="12"
                        Padding="15,6"
                        HasShadow="False"
                        BorderColor="Transparent"
                        HorizontalOptions="Center">     

                        <Label
                        Text="Restaurante"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="White"
                        HorizontalOptions="Center"/>
                    </Frame>

                    <BoxView
                        HeightRequest="1"
                        WidthRequest="80"
                        BackgroundColor="#E0E0E0"
                        HorizontalOptions="Center"
                        Margin="0,8"/>
                                    

                    <!-- Nombre -->
                    <Label
                        x:Name="LabelName"
                        Text="Name"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="Black"
                        HorizontalOptions="Center"
                        WidthRequest="240"
                        LineBreakMode="WordWrap"
                        HorizontalTextAlignment="Center"/>

                    <!-- Email -->
                    <Label
                        x:Name="LabelEmail"
                        Text="restaurante@gmail.com"
                        FontSize="14"
                        TextColor="#666666"
                        HorizontalOptions="Center"
                        WidthRequest="210"
                        LineBreakMode="WordWrap"
                        HorizontalTextAlignment="Center"/>

                    <!-- BotÃ³n Actualizar -->
