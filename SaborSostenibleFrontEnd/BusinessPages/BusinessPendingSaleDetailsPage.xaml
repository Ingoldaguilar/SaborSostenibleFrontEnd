<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SaborSostenibleFrontEnd.BusinessPages.BusinessPendingSaleDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#F5F5F5"
    NavigationPage.HasNavigationBar="False"
    Title="Detalles venta en proceso">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- HEADER -->
        <Grid
            Grid.Row="0"
            BackgroundColor="#2E7D32"
            Padding="20,3"
            ColumnDefinitions="Auto,*,Auto">
            <Button
                Text="↩"
                FontSize="22"
                BackgroundColor="Transparent"
                TextColor="White"
                Clicked="OnBackButtonClicked" />
            <Label
                Grid.Column="1"
                Text="Detalles venta en proceso"
                FontSize="16"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
            <BoxView Grid.Column="2" WidthRequest="24" Color="#2E7D32"/>
        </Grid>

        <!-- CONTENIDO -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">
                <Frame
                    CornerRadius="6"
                    Margin="0,0,0,4"
                    Padding="20"
                    BackgroundColor="White"
                    HasShadow="True"
                    BorderColor="#05000000">

                    <VerticalStackLayout Spacing="18">

                        <!-- Código de orden -->
                        <VerticalStackLayout Spacing="4">
                            <Label
                                Text="Código de orden"
                                FontSize="13"
                                TextColor="Gray" />
                            <Label
                                x:Name="OrderCodeLabel"
                                FontSize="16"
                                FontAttributes="Bold"
                                TextColor="Black" />
                        </VerticalStackLayout>

                        <!-- “Outline” Ver bolsas del pedido -->
                        <Frame
                            CornerRadius="8"
                            BackgroundColor="Transparent"
                            BorderColor="#2E7D32"
                            HasShadow="False"
                            HeightRequest="36"
                            Padding="0">

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Tapped="OnViewBagsClicked" />
                            </Frame.GestureRecognizers>

                            <HorizontalStackLayout
                                Padding="55,0"
                                VerticalOptions="Center">

                                <Label
                                    Text="Ver bolsas del pedido"
                                    FontSize="13"
                                    TextColor="#2E7D32"
                                    HorizontalOptions="CenterAndExpand"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Frame>

                        <!-- Separador -->
                        <BoxView HeightRequest="1" Color="#E5E5E5" />

                        <!-- Estado actual -->
                        <VerticalStackLayout Spacing="4">
                            <Label
                                Text="Estado actual"
                                FontSize="13"
                                TextColor="Gray" />
                            <Frame
                                Padding="4,2"
                                CornerRadius="12"
                                BackgroundColor="#1A2E7D32"
                                HasShadow="False"
                                HorizontalOptions="Start">
                                <Label
                                    x:Name="StateBadgeLabel"
                                    FontSize="12"
                                    TextColor="#2E7D32"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center" />
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Total -->
                        <VerticalStackLayout Spacing="0">
                            <Label
                                Text="Total"
                                FontSize="13"
                                TextColor="Gray" />
                            <Label
                                x:Name="TotalAmountLabel"
                                FontSize="16"
                                FontAttributes="Bold"
                                TextColor="#2E7D32" />
                        </VerticalStackLayout>

                        <!-- Separador -->
                        <BoxView HeightRequest="1" Color="#E5E5E5" />

                        <!-- Botones de acción -->
                        <VerticalStackLayout Spacing="8">
                            <Button
                                Text="✔ Confirmar pago"
                                BackgroundColor="#2E7D32"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="40"
                                Clicked="OnConfirmPaymentClicked" />
                            <Button
                                Text="✖ Denegar pago"
                                BackgroundColor="Transparent"
                                BorderColor="#D1D5DB"
                                BorderWidth="1"
                                TextColor="Gray"
                                CornerRadius="8"
                                HeightRequest="40"
                                Clicked="OnDenyPaymentClicked" />
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
