<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shell="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:local="clr-namespace=SaborSostenibleFrontEnd"
    x:Class="SaborSostenibleFrontEnd.MainPage"
    Title="Sabor Sostenible"
    shell:TabbedPage.ToolbarPlacement="Bottom"
    BackgroundColor="#F8F9FA"
    BarBackgroundColor="#2E7D32"
    BarTextColor="White"
    SelectedTabColor="White"
    UnselectedTabColor="#A5D6A7">

    <TabbedPage.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="12" />
        </Style>
    </TabbedPage.Resources>

    <!-- Tab 1: Descubrir -->
    <ContentPage Title="Descubrir" IconImageSource="{FontImage Glyph=&#xf002;, FontFamily=FontAwesome, Size=20, Color=White}" BackgroundColor="#F8F9FA">
        <ScrollView>
            <VerticalStackLayout Spacing="15" Padding="20,20,20,30">

                <!-- Header con saludo clásico -->
                <Grid Padding="15" BackgroundColor="#2E7D32">
                    <VerticalStackLayout>
                        <Label x:Name="SaludoLabel"
                               FontSize="26"
                               FontAttributes="Bold"
                               TextColor="White" />
                        <Label Text="Descubre opciones sostenibles cerca de ti"
                               FontSize="14"
                               TextColor="#C8E6C9" />
                    </VerticalStackLayout>
                </Grid>

                <!-- Mostrar ubicación sin fondo -->
                <VerticalStackLayout Padding="10,5,10,15">
                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Ubicación actual: " FontSize="12" TextColor="#666" />
                                <Span Text="Alajuela, Costa Rica" FontSize="12" TextColor="#2E7D32" FontAttributes="Bold" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>

                <!-- Barra de búsqueda (por ahora sin funcionalidad) -->
                <Grid Padding="10" BackgroundColor="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Text="&#xf002;" FontFamily="FontAwesome" TextColor="#999" FontSize="18" VerticalOptions="Center" Margin="0,0,10,0" />
                    <Entry Grid.Column="1" Placeholder="Buscar por nombre de restaurante..." PlaceholderColor="#AAA" FontSize="14" />
                </Grid>

                <!-- Lista dinámica de restaurantes (sin botón) -->
                <CollectionView x:Name="RestaurantesCollectionView"
                                ItemsSource="{Binding Restaurantes}"
                                EmptyView="No hay restaurantes disponibles."
                                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White"
                                   CornerRadius="10"
                                   Padding="10"
                                   Margin="0,10"
                                   HasShadow="True"
                                   BorderColor="Transparent">
                                <Grid ColumnDefinitions="Auto,*"
                                      VerticalOptions="Center">
                                    <Image Grid.Column="0"
                                           Source="{Binding imagen}"
                                           WidthRequest="80"
                                           HeightRequest="80"
                                           Aspect="AspectFill"
                                           VerticalOptions="Center"
                                           Clip="RectangleGeometry RadiusX=10 RadiusY=10 Rect='0,0,80,80'" />
                                    <VerticalStackLayout Grid.Column="1"
                                                         Padding="10,0"
                                                         Spacing="4"
                                                         VerticalOptions="Center">
                                        <Label Text="{Binding nombreRestaurante}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="#2E7D32" />
                                        <Label Text="{Binding descripcionRestaurante}"
                                               FontSize="13"
                                               TextColor="#555"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2"/>
                                    </VerticalStackLayout>
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer CommandParameter="{Binding}" Tapped="OnRestauranteCardTapped" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>

    <!-- Tab 2: Pedidos -->
    <ContentPage Title="Pedidos" IconImageSource="{FontImage Glyph=&#xf0f2;, FontFamily=FontAwesome, Size=20, Color=White}" BackgroundColor="#F8F9FA">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="10">
                <Label Text="Mis Pedidos" FontSize="20" FontAttributes="Bold" TextColor="#2E7D32" />

                <CollectionView x:Name="PedidosCollectionView"
                                ItemsSource="{Binding Pedidos}"
                                EmptyView="Aún no tienes pedidos registrados."
                                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="15"
                                   Margin="0,5"
                                   BackgroundColor="White"
                                   CornerRadius="10"
                                   HasShadow="True">
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="{Binding RestaurantName}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#2E7D32"/>
                                    <Label Text="{Binding Date}"
                                           FontSize="14"
                                           TextColor="#555"/>
                                    <Label Text="{Binding Status}"
                                           FontSize="13"
                                           TextColor="#888"/>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>

    <!-- Tab 3: Perfil -->
    <ContentPage Title="Yo" IconImageSource="{FontImage Glyph=&#xf007;, FontFamily=FontAwesome, Size=20, Color=White}" BackgroundColor="#F8F9FA">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <Label Text="Mi Perfil" FontSize="24" FontAttributes="Bold" TextColor="#2E7D32" />

                <Frame BackgroundColor="White" CornerRadius="12" Padding="15" HasShadow="True">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Nombre completo:" FontSize="14" TextColor="#888" />
                        <Label x:Name="UsuarioNombreLabel" FontSize="16" TextColor="#2E7D32" FontAttributes="Bold"/>

                        <Label Text="Correo electrónico:" FontSize="14" TextColor="#888" Margin="0,10,0,0"/>
                        <Label x:Name="UsuarioEmailLabel" FontSize="16" TextColor="#2E7D32" FontAttributes="Bold"/>

                        <Label Text="Teléfono:" FontSize="14" TextColor="#888" Margin="0,10,0,0"/>
                        <Label x:Name="UsuarioTelefonoLabel" FontSize="14" TextColor="#2E7D32" />

                        <Label Text="Dirección:" FontSize="14" TextColor="#888" Margin="0,10,0,0"/>
                        <Label x:Name="UsuarioDireccionLabel" FontSize="14" TextColor="#2E7D32" />

                        <Label Text="Rol actual:" FontSize="14" TextColor="#888" Margin="0,10,0,0"/>
                        <Label x:Name="UsuarioRolLabel" FontSize="14" TextColor="#2E7D32" FontAttributes="Bold" />
                    </VerticalStackLayout>
                </Frame>

                <Button Text="Solicitar ser voluntario"
                        Clicked="OnSolicitarVoluntariadoClicked"
                        BackgroundColor="#2E7D32"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="10"/>

                <Button Text="Cerrar Sesión"
                        Clicked="OnCerrarSesionClicked"
                        BackgroundColor="#E53935"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="10" />

                <Label Text="Versión de la App: 1.0.0"
                       FontSize="12"
                       HorizontalOptions="Center"
                       TextColor="#AAA"
                       Margin="0,30,0,0"/>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>

</TabbedPage>
