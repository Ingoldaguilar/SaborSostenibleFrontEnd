<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
    x:Class="SaborSostenibleFrontEnd.AdminPages.AdminMainPage"
    Title="Panel de administración"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="#F8F9FA"
    BarBackgroundColor="#2E7D32"
    BarTextColor="White"
    SelectedTabColor="White"
    UnselectedTabColor="#A5D6A7"
    android:TabbedPage.ToolbarPlacement="Bottom">

    <!-- Tab 1: Administrar -->
    <ContentPage
        NavigationPage.HasNavigationBar="False"
        Title="Administrar"
        IconImageSource="{FontImage Glyph=&#xf013;, FontFamily=FontAwesome, Size=20, Color=White}"
        BackgroundColor="#F8F9FA">

        <Grid RowDefinitions="Auto,*">
            <!-- HEADER -->
            <Grid Grid.Row="0" BackgroundColor="#2E7D32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1"/>
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    Text="Panel de administración"
                    FontSize="16"
                    FontAttributes="Bold"
                    TextColor="White"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Padding="0,15"/>
                <BoxView
                    Grid.Row="1"
                    HeightRequest="1"
                    BackgroundColor="#E5E5E5"
                    HorizontalOptions="FillAndExpand"/>
            </Grid>

            <!-- BODY -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Padding="20" Spacing="20">
                    <Grid
                        ColumnDefinitions="*,*"
                        RowDefinitions="Auto,Auto,Auto"
                        ColumnSpacing="15"
                        RowSpacing="15">

                        <!-- Card 1: Agregar restaurante -->
                        <Frame
                            Grid.Row="0" Grid.Column="0"
                            BackgroundColor="White"
                            CornerRadius="15"
                            Padding="20"
                            HasShadow="True"
                            BorderColor="Transparent">
                            <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                                <Frame
                                    WidthRequest="40" HeightRequest="40"
                                    CornerRadius="24"
                                    BackgroundColor="#E8F5E9"
                                    HasShadow="False"
                                    Padding="0"
                                    BorderColor="Transparent">
                                    <Label
                                        Text="&#xf2e7;"
                                        FontFamily="FontAwesome"
                                        FontSize="20"
                                        TextColor="#2E7D32"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"/>
                                </Frame>
                                <Label
                                    Text="Agregar restaurante"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    TextColor="Black"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"/>
                                <Label
                                    Text="Registrar nuevo restaurante"
                                    FontSize="10"
                                    TextColor="Gray"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAgregarRestauranteTapped"/>
                            </Frame.GestureRecognizers>
                        </Frame>

                        <!-- Card 2: Agregar banco de alimentos -->
                        <Frame
                            Grid.Row="0" Grid.Column="1"
                            BackgroundColor="White"
                            CornerRadius="15"
                            Padding="20"
                            HasShadow="True"
                            BorderColor="Transparent">
                            <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                                <Frame
                                    WidthRequest="40" HeightRequest="40"
                                    CornerRadius="20"
                                    BackgroundColor="#E8F5E9"
                                    HasShadow="False"
                                    Padding="0"
                                    BorderColor="Transparent">
                                    <Label
                                        Text="&#xf1ad;"
                                        FontFamily="FontAwesome"
                                        FontSize="20"
                                        TextColor="#2E7D32"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"/>
                                </Frame>
                                <Label
                                    Text="Agregar banco de alimentos"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    TextColor="Black"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"/>
                                <Label
                                    Text="Registrar nuevo banco de alimentos"
                                    FontSize="10"
                                    TextColor="Gray"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAgregarBancoTapped"/>
                            </Frame.GestureRecognizers>
                        </Frame>

                        <!-- Card 3: Solicitudes voluntarios -->
                        <Frame
                            Grid.Row="1" Grid.Column="0"
                            BackgroundColor="White"
                            CornerRadius="15"
                            Padding="20"
                            HasShadow="True"
                            BorderColor="Transparent">
                            <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                                <Frame
                                    WidthRequest="40" HeightRequest="40"
                                    CornerRadius="20"
                                    BackgroundColor="#E8F5E9"
                                    HasShadow="False"
                                    Padding="0"
                                    BorderColor="Transparent">
                                    <Label
                                        Text="&#xf0c0;"
                                        FontFamily="FontAwesome"
                                        FontSize="20"
                                        TextColor="#2E7D32"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"/>
                                </Frame>
                                <Label
                                    Text="Solicitudes voluntarios"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    TextColor="Black"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"/>
                                <Label
                                    Text="Gestionar solicitudes"
                                    FontSize="10"
                                    TextColor="Gray"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnSolicitudesTapped"/>
                            </Frame.GestureRecognizers>
                        </Frame>

                        <!-- Card 4: Estados bancos de alimentos -->
                        <Frame
                            Grid.Row="1" Grid.Column="1"
                            BackgroundColor="White"
                            CornerRadius="15"
                            Padding="20"
                            HasShadow="True"
                            BorderColor="Transparent">
                            <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                                <Frame
                                    WidthRequest="40" HeightRequest="40"
                                    CornerRadius="20"
                                    BackgroundColor="#E8F5E9"
                                    HasShadow="False"
                                    Padding="0"
                                    BorderColor="Transparent">
                                    <Label
                                        Text="&#xf013;"
                                        FontFamily="FontAwesome"
                                        FontSize="20"
                                        TextColor="#2E7D32"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"/>
                                </Frame>
                                <Label
                                    Text="Estados bancos de alimentos"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    TextColor="Black"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"/>
                                <Label
                                    Text="Activar/desactivar bancos"
                                    FontSize="10"
                                    TextColor="Gray"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnEstadosBancosTapped"/>
                            </Frame.GestureRecognizers>
                        </Frame>

                        <!-- Card 5: Estados restaurantes -->
                        <Frame
                            Grid.Row="2" Grid.Column="0"
                            BackgroundColor="White"
                            CornerRadius="15"
                            Padding="20"
                            HasShadow="True"
                            BorderColor="Transparent">
                            <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                                <Frame
                                    WidthRequest="40" HeightRequest="40"
                                    CornerRadius="20"
                                    BackgroundColor="#E8F5E9"
                                    HasShadow="False"
                                    Padding="0"
                                    BorderColor="Transparent">
                                    <Label
                                        Text="&#xf013;"
                                        FontFamily="FontAwesome"
                                        FontSize="20"
                                        TextColor="#2E7D32"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"/>
                                </Frame>
                                <Label
                                    Text="Estados restaurantes"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    TextColor="Black"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"/>
                                <Label
                                    Text="Activar/desactivar restaurantes"
                                    FontSize="10"
                                    TextColor="Gray"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnEstadosRestaurantesTapped"/>
                            </Frame.GestureRecognizers>
                        </Frame>

                    </Grid>
                </VerticalStackLayout>
            </ScrollView>
            
        </Grid>
    </ContentPage>

    <!-- Tab 2: Perfil -->
    <ContentPage
        NavigationPage.HasNavigationBar="False"
        Title="Yo"
        IconImageSource="{FontImage Glyph=&#xf007;, FontFamily=FontAwesome, Size=20, Color=White}"
        BackgroundColor="#F8F9FA">

        <Grid RowDefinitions="Auto,*">
            <!-- HEADER -->
            <Grid Grid.Row="0" BackgroundColor="#2E7D32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1"/>
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    Text="Mi Perfil"
                    FontSize="16"
                    FontAttributes="Bold"
                    TextColor="White"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Padding="0,15"/>
                <BoxView
                    Grid.Row="1"
                    HeightRequest="1"
                    BackgroundColor="#E5E5E5"
                    HorizontalOptions="FillAndExpand"/>
            </Grid>

            <!-- BODY -->
            <ScrollView Grid.Row="1">
                <!-- Card blanco con sombra -->
                <Frame
                    Margin="30,31"
                    Padding="0"
                    CornerRadius="12"
                    HasShadow="True"
                    BackgroundColor="White"
                    BorderColor="Transparent"
                    HorizontalOptions="Fill">

                    <VerticalStackLayout
                        Padding="25"
                        Spacing="20"
                        HorizontalOptions="Center">

                        <!-- Ícono circular -->
                        <Frame
                            WidthRequest="72"
                            HeightRequest="72"
                            CornerRadius="36"
                            BackgroundColor="#E8F5E9"
                            HasShadow="False"
                            Padding="0"
                            HorizontalOptions="Center"
                            BorderColor="Transparent">
                            <Label
                                Text="&#xf007;"
                                FontFamily="FontAwesome"
                                FontSize="36"
                                TextColor="#2E7D32"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"/>
                        </Frame>

                        <!-- Rol -->
                        <Label
                            x:Name="LabelName"
                            Text="Administrador"
                            FontSize="20"
                            FontAttributes="Bold"
                            TextColor="Black"
                            HorizontalOptions="Center"/>

                        <!-- Name -->
                        <Label
                            x:Name="LabelFullName"
                            Text="FullName"
                            FontSize="14"
                            TextColor="Black"
                            HorizontalOptions="Center"
                            WidthRequest="210"
                            LineBreakMode="WordWrap"
                            HorizontalTextAlignment="Center"/>

                            <!-- Email -->
                        <Label
                            x:Name="LabelEmail"
                            Text="example@gmail.com"
                            FontSize="14"
                            TextColor="Gray"
                            HorizontalOptions="Center"
                            WidthRequest="210"
                            LineBreakMode="WordWrap"
                            HorizontalTextAlignment="Center"/>

                        <!-- Botón Cerrar Sesión -->
                        <Button
                            Text="⎋  Cerrar sesión"
                            Clicked="OnLogoutClicked"
                            BackgroundColor="Transparent"
                            TextColor="#E53935"
                            BorderColor="#E53935"
                            BorderWidth="1"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            HeightRequest="40"
                            HorizontalOptions="FillAndExpand"/>
                    </VerticalStackLayout>
                </Frame>
            </ScrollView>

        </Grid>
    </ContentPage>
</TabbedPage>
