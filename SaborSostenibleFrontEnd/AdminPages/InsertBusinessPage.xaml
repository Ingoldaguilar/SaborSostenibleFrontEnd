<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SaborSostenibleFrontEnd.AdminPages.InsertBusinessPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="#F5F5F5"
    Title="Insertar restaurante">

    <Grid RowDefinitions="Auto,*">
        <!-- HEADER -->
        <Grid
            Grid.Row="0"
            BackgroundColor="#2E7D32"
            Padding="12,1"
            ColumnDefinitions="Auto,*,Auto">

            <!-- Back button -->
            <Button
                Text="↩"
                FontAttributes="Bold"
                FontSize="22"
                BackgroundColor="Transparent"
                TextColor="White"
                Clicked="OnBackButtonClicked" />

            <!-- Title -->
            <Label
                Grid.Column="1"
                Text="Insertar restaurante"
                FontSize="16"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Padding="0,14" />

            <!-- Spacer -->
            <BoxView
                Grid.Column="2"
                WidthRequest="24"
                Color="#2E7D32" />
        </Grid>

        <!-- CONTENT -->
        <ScrollView Grid.Row="1">
            <Frame
                Margin="20,20"
                Padding="24"
                CornerRadius="12"
                HasShadow="True"
                BackgroundColor="White"
                BorderColor="Transparent">
                <VerticalStackLayout Spacing="12">

                    <!-- Nombre -->
                    <VerticalStackLayout Spacing="4">
                        <Label
                            Text="Nombre"
                            FontSize="12"
                            FontAttributes="Bold"
                            TextColor="Black" />
                        <Entry
                            x:Name="NameEntry"
                            Placeholder="Nombre del restaurante"
                            FontSize="11"
                            HeightRequest="40"
                            HorizontalOptions="FillAndExpand" />
                    </VerticalStackLayout>

                    <!-- Descripción -->
                    <VerticalStackLayout Spacing="4">
                        <Label
                            Text="Descripción"
                            FontSize="12"
                            FontAttributes="Bold"
                            TextColor="Black" />
                        <Editor
                            x:Name="DescriptionEntry"
                            Placeholder="Descripción del restaurante"
                            FontSize="11"
                            AutoSize="TextChanges"
                            HeightRequest="40"
                            HorizontalOptions="FillAndExpand"/>
                    </VerticalStackLayout>

                    <!-- Logo -->
                    <VerticalStackLayout Spacing="4">
                        <Label
                            Text="Logo"
                            FontSize="12"
                            FontAttributes="Bold"
                            TextColor="Black" />

                        <!-- área punteada para seleccionar imagen -->
                        <Frame
                            Padding="12"
                            CornerRadius="8"
                            HasShadow="False"
                            BorderColor="#E0E0E0"
                            BackgroundColor="Transparent"
                            HeightRequest="40">
                            <HorizontalStackLayout
                                Spacing="10"
                                VerticalOptions="Center"
                                HorizontalOptions="Center">
                                <Label
                                    Text="&#xf093;"
                                    FontFamily="FontAwesome"
                                    FontSize="16"
                                    TextColor="#2E7D32"/>
                                <Label
                                    Text="Seleccionar imagen"
                                    FontSize="11"
                                    TextColor="#666"/>
                            </HorizontalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnSelectLogoClicked"/>
                            </Frame.GestureRecognizers>
                        </Frame>

                        <!-- aquí mostramos el nombre de archivo seleccionado -->
                        <Label
                            x:Name="LogoSelectedLabel"
                            Text=""
                            FontSize="11"
                            TextColor="Gray"
                            HorizontalOptions="Start"/>
                    </VerticalStackLayout>

                    <!-- Usuario administrador -->
                    <VerticalStackLayout Spacing="4">
                        <Label
                            Text="Usuario administrador"
                            FontSize="12"
                            FontAttributes="Bold"
                            TextColor="Black" />
                        <Picker
                            x:Name="AdminPicker"
                            Title="Seleccionar administrador"
                            ItemDisplayBinding="{Binding FullName}"
                            SelectedIndexChanged="AdminPicker_SelectedIndexChanged"/>
                    </VerticalStackLayout>

                    <!-- Email -->
                    <VerticalStackLayout Spacing="4">
                        <Label
                            Text="Email"
                            FontSize="12"
                            FontAttributes="Bold"
                            TextColor="Black" />
                        <Entry
                            x:Name="EmailEntry"
                            Placeholder="correo@ejemplo.com"
                            Keyboard="Email"
                            FontSize="11"
                            HeightRequest="40"
                            HorizontalOptions="FillAndExpand"/>
                    </VerticalStackLayout>

                    <!-- Número de teléfono -->
                    <VerticalStackLayout Spacing="4">
                        <Label
                            Text="Número de teléfono"
                            FontSize="12"
                            FontAttributes="Bold"
                            TextColor="Black" />
                        <Entry
                            x:Name="PhoneEntry"
                            Placeholder="+506 1234 5678"
                            Keyboard="Telephone"
                            FontSize="11"
                            HeightRequest="40"
                            HorizontalOptions="FillAndExpand"/>
                    </VerticalStackLayout>

                    <!-- Dirección -->
                    <VerticalStackLayout Spacing="4">
                        <Label
                            Text="Dirección"
                            FontSize="12"
                            FontAttributes="Bold"
                            TextColor="Black" />
                        <Entry
                            x:Name="AddressEntry"
                            Placeholder="Dirección del restaurante"
                            FontSize="11"
                            HeightRequest="40"
                            HorizontalOptions="FillAndExpand"/>
                    </VerticalStackLayout>

                    <!-- Elegir ubicación -->
                    <Button
                        Text="📍  Elegir ubicación en el mapa"
                        FontSize="12"
                        HeightRequest="40"
                        CornerRadius="8"
                        BorderColor="#2E7D32"
                        BorderWidth="1"
                        BackgroundColor="Transparent"
                        TextColor="#2E7D32"
                        Clicked="OnElegirUbicacionClicked"
                        HorizontalOptions="FillAndExpand"/>

                    <!-- Etiqueta ubicación -->
                    <Label
                        x:Name="UbicacionLabel"
                        Text="No se ha detectado ubicación"
                        FontSize="11"
                        TextColor="Gray"
                        HorizontalOptions="Center"/>

                    <!-- Botón Insertar -->
                    <Button
                        Text="Insertar"
                        FontSize="14"
                        FontAttributes="Bold"
                        HeightRequest="40"
                        CornerRadius="8"
                        BackgroundColor="#2E7D32"
                        TextColor="White"
                        Clicked="OnInsertClicked"
                        HorizontalOptions="FillAndExpand"/>

                </VerticalStackLayout>
            </Frame>
        </ScrollView>
    </Grid>
</ContentPage>
