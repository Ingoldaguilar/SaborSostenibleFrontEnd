<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SaborSostenibleFrontEnd.ConfirmReceptionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="#F5F5F5"
    Title="Confirmación recibida">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <!-- HEADER -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto, *">
            <Button
                Text="←"
                FontSize="24"
                BackgroundColor="Transparent"
                TextColor="#8CBF26"
                Clicked="OnBackButtonClicked" />
            <Label
                Grid.Column="1"
                Text="Confirmación recibida"
                FontSize="20"
                FontAttributes="Bold"
                TextColor="#8CBF26"
                HorizontalOptions="Center" />
        </Grid>

        <!-- CONTENIDO -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15">

                <Frame
                    CornerRadius="10"
                    Padding="0"
                    BackgroundColor="White"
                    HasShadow="True">
                    <VerticalStackLayout Spacing="0">

                        <!-- Logo + negocio -->
                        <HorizontalStackLayout
                            Spacing="10"
                            Padding="12,10"
                            VerticalOptions="Center">
                            <Image
                                x:Name="LogoImage"
                                WidthRequest="40"
                                HeightRequest="40"
                                Aspect="AspectFill" />
                            <Label
                                x:Name="BusinessNameLabel"
                                FontAttributes="Bold"
                                FontSize="16"
                                TextColor="Black"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <!-- Fecha + descripción -->
                        <HorizontalStackLayout
                            Spacing="6"
                            Padding="12,0"
                            VerticalOptions="Center">
                            <Image
                                Source="calendar.png"
                                WidthRequest="16"
                                HeightRequest="16"
                                Aspect="AspectFit" />
                            <Label
                                x:Name="DateLabel"
                                FontSize="14"
                                TextColor="Gray"
                                VerticalOptions="Center" />
                            <Label
                                x:Name="DescriptionLabel"
                                FontSize="14"
                                TextColor="Gray"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <!-- Estado -->
                        <Label
                            x:Name="StateLabel"
                            BackgroundColor="#556B2F"
                            TextColor="White"
                            FontSize="14"
                            HorizontalTextAlignment="Center"
                            VerticalTextAlignment="Center"
                            HeightRequest="28" />

                    </VerticalStackLayout>
                </Frame>

                <!-- Botón Recibida -->
                <Button
                    x:Name="ConfirmButton"
                    Text="Recibida"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="#8CBF26"
                    TextColor="White"
                    Clicked="OnConfirmClicked" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
