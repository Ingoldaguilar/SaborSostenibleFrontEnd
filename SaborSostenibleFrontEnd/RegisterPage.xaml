<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="SaborSostenibleFrontEnd.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource backgroundColor}">

    <Grid>
        <Image Source="background.jpg" Aspect="AspectFill" Opacity="0.5" />

        <ScrollView>
            <VerticalStackLayout Padding="30" Spacing="15" VerticalOptions="Center">
                <Label Text="Registrarse" FontAttributes="Bold" FontSize="28" TextColor="{StaticResource Primary}" HorizontalOptions="Center" />

                <Label Text="Nombre" TextColor="{StaticResource PrimaryDark}" />
                <Entry x:Name="NameEntry" Placeholder="Nombre" BackgroundColor="White" TextColor="{StaticResource Black}" />

                <Label Text="Segundo nombre (opcional)" TextColor="{StaticResource PrimaryDark}" />
                <Entry x:Name="SecondNameEntry" Placeholder="Segundo nombre" BackgroundColor="White" TextColor="{StaticResource Black}" />

                <Label Text="Primer apellido" TextColor="{StaticResource PrimaryDark}" />
                <Entry x:Name="LastNameEntry" Placeholder="Primer apellido" BackgroundColor="White" TextColor="{StaticResource Black}" />

                <Label Text="Segundo apellido (opcional)" TextColor="{StaticResource PrimaryDark}" />
                <Entry x:Name="SecondLastNameEntry" Placeholder="Segundo apellido" BackgroundColor="White" TextColor="{StaticResource Black}" />

                <Label Text="Teléfono (opcional)" TextColor="{StaticResource PrimaryDark}" />
                <Entry x:Name="PhoneEntry" Placeholder="Teléfono" Keyboard="Telephone" BackgroundColor="White" TextColor="{StaticResource Black}" />

                <Label Text="Correo" TextColor="{StaticResource PrimaryDark}" />
                <Entry x:Name="EmailEntry" Placeholder="ejemplo@correo.com" Keyboard="Email" BackgroundColor="White" TextColor="{StaticResource Black}" />

                <Label Text="Dirección (opcional)" TextColor="{StaticResource PrimaryDark}" />
                <Entry x:Name="AddressEntry" Placeholder="Dirección" BackgroundColor="White" TextColor="{StaticResource Black}" />

                <Button Text="📍 Elegir ubicación en el mapa"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    Clicked="OnElegirUbicacionClicked" />

                            <Label x:Name="UbicacionLabel"
                   Text="Ubicación no detectada aún."
                   FontSize="12"
                   TextColor="{StaticResource PrimaryDarkText}"
                   HorizontalOptions="Center" />

                <!--<Button Text="📍 Usar mi ubicación actual" BackgroundColor="{StaticResource Primary}" TextColor="White" Clicked="OnObtenerUbicacionClicked" />

                <Label x:Name="UbicacionLabel" Text="Ubicación no detectada aún." FontSize="12" TextColor="{StaticResource PrimaryDarkText}" HorizontalOptions="Center" />-->

                <Label Text="Contraseña" TextColor="{StaticResource PrimaryDark}" />
                <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True" BackgroundColor="White" TextColor="{StaticResource Black}" />

                <Label Text="Repita la contraseña" TextColor="{StaticResource PrimaryDark}" />
                <Entry x:Name="RepeatPasswordEntry" Placeholder="Repetir contraseña" IsPassword="True" BackgroundColor="White" TextColor="{StaticResource Black}" />

                <Button Text="Registrarse" BackgroundColor="{StaticResource Primary}" TextColor="White" Clicked="OnRegisterClicked" />

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="¿Ya tienes cuenta? " TextColor="{StaticResource PrimaryDarkText}" />
                    <Label Text="Inicia sesión" TextColor="{StaticResource Primary}" FontAttributes="Bold">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLoginTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
