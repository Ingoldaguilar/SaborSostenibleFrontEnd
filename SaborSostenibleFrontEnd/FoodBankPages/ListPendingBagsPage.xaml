<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SaborSostenibleFrontEnd.FoodBankPages.ListPendingBagsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="#F5F5F5"
    Title="">

    <Grid RowDefinitions="Auto,*">

        <!-- HEADER -->
        <Grid Grid.Row="0" BackgroundColor="#2E7D32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1"/>
            </Grid.RowDefinitions>

            <!-- Título centrado -->
            <Label
                Grid.Row="0"
                Text="Bolsas pendientes"
                FontSize="16"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Padding="0,15"/>

            <!-- Línea inferior -->
            <BoxView
                Grid.Row="1"
                HeightRequest="1"
                BackgroundColor="#E5E5E5"
                HorizontalOptions="FillAndExpand" />
        </Grid>

        <!-- CONTENIDO: cada tarjeta se añade dinámicamente en el code-behind -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout
                x:Name="BagsContainer"
                Spacing="0"
                Padding="20" />
        </ScrollView>
    </Grid>
</ContentPage>
