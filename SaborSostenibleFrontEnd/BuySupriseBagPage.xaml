<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaborSostenibleFrontEnd.BuySupriseBagPage"
             BackgroundColor="White"
             Title="Comprar Bolsa Sorpresa">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Paso 1: Confirmar Bolsa -->
            <StackLayout x:Name="Paso1" IsVisible="True" Spacing="20">
                <Label Text="Confirmación de Bolsa" FontSize="24" FontAttributes="Bold" TextColor="#2C3E50"/>
                <Label x:Name="DescripcionBolsaLabel" FontSize="16" TextColor="#555"/>
                <Label x:Name="PrecioBolsaLabel" FontSize="16" FontAttributes="Bold" TextColor="#2E7D32"/>

                <Switch x:Name="DonacionSwitch" Toggled="OnDonacionToggled"/>
                <Label Text="¿Deseas donar esta bolsa?" FontSize="14" TextColor="#666"/>

                <Picker x:Name="FoodBankPicker"
                        Title="Selecciona un banco de comida"
                        IsVisible="False"/>

                <Button Text="Proceder con Compra"
                        Clicked="OnProcederCompraClicked"
                        BackgroundColor="#2E7D32"
                        TextColor="White"
                        CornerRadius="12"
                        FontAttributes="Bold"/>
            </StackLayout>

            <!-- Paso 2: Instrucciones de Pago -->
            <StackLayout x:Name="Paso2" IsVisible="False" Spacing="20">
                <Label Text="Instrucciones de Pago" FontSize="24" FontAttributes="Bold" TextColor="#2C3E50"/>
                <Label x:Name="PagoNombreNegocioLabel" TextColor="#555"/>
                <Label x:Name="PagoTelefonoLabel" TextColor="#555"/>
                <Label x:Name="PagoCodigoOrdenLabel" TextColor="#2E7D32" FontAttributes="Bold"/>

                <Button Text="Continuar"
                        Clicked="OnContinuarClicked"
                        BackgroundColor="#2E7D32"
                        TextColor="White"
                        CornerRadius="12"
                        FontAttributes="Bold"/>
            </StackLayout>

            <!-- Paso 3: Confirmación -->
            <StackLayout x:Name="Paso3" IsVisible="False" Spacing="20">
                <Label Text="Compra Finalizada" FontSize="24" FontAttributes="Bold" TextColor="#2C3E50"/>
                <Label x:Name="ConfirmacionCodigoOrdenLabel" FontSize="16" TextColor="#000"/>
                <Label x:Name="ConfirmacionNombreNegocioLabel" FontSize="16" TextColor="#000"/>
                <Label x:Name="ConfirmacionEstadoLabel" FontSize="16" TextColor="#2E7D32"/>

                <Button Text="Volver al Inicio"
                        Clicked="OnVolverInicioClicked"
                        BackgroundColor="#607D8B"
                        TextColor="White"
                        CornerRadius="10"/>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
