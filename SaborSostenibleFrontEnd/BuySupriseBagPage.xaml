<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaborSostenibleFrontEnd.BuySupriseBagPage"
             BackgroundColor="White"
             Title="Comprar Bolsa Sorpresa">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <Image x:Name="RestauranteImagen" IsVisible="False"/>

            <!-- Paso 1: Confirmar Bolsa -->
            <StackLayout x:Name="Paso1" IsVisible="True" Spacing="25">
                <!-- Encabezado -->
                <Label Text="Confirmación de Bolsa" FontSize="26" FontAttributes="Bold" TextColor="#2C3E50" />

                <!-- Tarjeta de restaurante -->
                <Frame BackgroundColor="#F5F5F5" CornerRadius="15" HasShadow="True" Padding="15">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                        <Image Source="{Binding Source={x:Reference RestauranteImagen}, Path=Source}" WidthRequest="70" HeightRequest="70" Aspect="AspectFill" 
                   Clip="RectangleGeometry RadiusX=10 RadiusY=10 Rect='0,0,70,70'" />
                        <VerticalStackLayout VerticalOptions="Center" Spacing="4">
                            <Label x:Name="RestauranteNombreLabel" FontSize="18" FontAttributes="Bold" TextColor="#2E7D32"/>
                            <Label x:Name="RestauranteDescripcionLabel" FontSize="14" TextColor="#777"/>
                            <Label x:Name="RestauranteTelefonoLabel" FontSize="13" TextColor="#999"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Descripción de la bolsa -->
                <Frame BackgroundColor="White" CornerRadius="12" Padding="15" HasShadow="True" BorderColor="#A5D6A7">
                    <VerticalStackLayout Spacing="10">
                        <Label x:Name="DescripcionBolsaLabel" FontSize="16" TextColor="#444" />
                        <Label x:Name="PrecioBolsaLabel" FontSize="20" FontAttributes="Bold" TextColor="#2E7D32" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Donación: Toggle y texto a la par -->
                <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                    <Switch x:Name="DonacionSwitch" Toggled="OnDonacionToggled" HorizontalOptions="Start" />
                    <Label Text="¿Deseas donar esta bolsa?" FontSize="14" VerticalOptions="Center" TextColor="#666" Padding="10,0,0,0" />
                </Grid>

                <!-- Picker para banco de comida -->
                <Picker x:Name="FoodBankPicker"
            Title="Selecciona un banco de comida"
            IsVisible="False"
            BackgroundColor="#FAFAFA"
            TextColor="#2E7D32"
            TitleColor="#2E7D32"
            FontSize="14" />

                <!-- Botón de compra -->
                <Button Text="Proceder con Compra"
            Clicked="OnProcederCompraClicked"
            BackgroundColor="#2E7D32"
            TextColor="White"
            FontAttributes="Bold"
            CornerRadius="12"
            HeightRequest="50"
            FontSize="16"/>
            </StackLayout>

            <!-- Paso 2: Instrucciones de Pago -->
            <StackLayout x:Name="Paso2" IsVisible="False" Spacing="20">
                <Label Text="Instrucciones de Pago" FontSize="24" FontAttributes="Bold" TextColor="#2C3E50"/>
                <Label x:Name="PagoNombreNegocioLabel" TextColor="#555"/>
                <Label x:Name="PagoTelefonoLabel" TextColor="#555"/>
                <Label x:Name="PagoCodigoOrdenLabel" TextColor="#2E7D32" FontAttributes="Bold"/>

                <Button Text="Continuar"
                        Clicked="OnContinuarClicked"
                        BackgroundColor="#2E7D32"
                        TextColor="White"
                        CornerRadius="12"
                        FontAttributes="Bold"/>
            </StackLayout>

            <!-- Paso 3: Confirmación -->
            <StackLayout x:Name="Paso3" IsVisible="False" Spacing="20">
                <Label Text="Compra Finalizada" FontSize="24" FontAttributes="Bold" TextColor="#2C3E50"/>
                <Label x:Name="ConfirmacionCodigoOrdenLabel" FontSize="16" TextColor="#000"/>
                <Label x:Name="ConfirmacionNombreNegocioLabel" FontSize="16" TextColor="#000"/>
                <Label x:Name="ConfirmacionEstadoLabel" FontSize="16" TextColor="#2E7D32"/>

                <Button Text="Volver al Inicio"
                        Clicked="OnVolverInicioClicked"
                        BackgroundColor="#607D8B"
                        TextColor="White"
                        CornerRadius="10"/>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
