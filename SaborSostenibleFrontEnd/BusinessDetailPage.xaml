<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaborSostenibleFrontEnd.BusinessDetailPage"
             BackgroundColor="#F8F9FA"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*">

        <!-- Header -->
        <Frame Grid.Row="0" BackgroundColor="#789262" Padding="0" HasShadow="False" CornerRadius="0">
            <Grid Padding="20,25" HorizontalOptions="FillAndExpand">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Label Text="←"
                           FontSize="20"
                           TextColor="White"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnBackButtonClicked" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text="Detalle del Restaurante"
                           Grid.Column="1"
                           HorizontalOptions="Center"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"
                           FontFamily="OpenSansSemibold"/>
                </Grid>
            </Grid>
        </Frame>

        <!-- Imagen destacada -->
        <Image x:Name="RestauranteImagen"
               Grid.Row="1"
               Aspect="AspectFill"
               HeightRequest="200"
               HorizontalOptions="FillAndExpand"
               Margin="0"/>

        <!-- Datos del restaurante -->
        <VerticalStackLayout Grid.Row="2" Padding="20,15,20,10" Spacing="8">
            <Label x:Name="RestauranteNombreLabel"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#789262"
                   FontFamily="OpenSansSemibold"/>

            <Label x:Name="RestauranteDescripcionLabel"
                   FontSize="14"
                   TextColor="#555"
                   LineBreakMode="WordWrap"
                   FontFamily="OpenSansRegular"/>

            <HorizontalStackLayout Spacing="10">
                <Label Text="📞" FontSize="14"/>
                <Label x:Name="RestauranteTelefonoLabel"
                       FontSize="14"
                       TextColor="#789262"
                       FontFamily="OpenSansRegular"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <!-- Título -->
        <Label Text="Bolsas Sorpresa Disponibles"
               Grid.Row="3"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="#789262"
               Margin="20,0"
               FontFamily="OpenSansSemibold"/>

        <!-- Lista -->
        <CollectionView x:Name="BolsasCollectionView"
                        Grid.Row="4"
                        ItemsSource="{Binding BolsasDisponibles}"
                        SelectionMode="None"
                        Margin="20,0,20,20">
            <CollectionView.EmptyView>
                <VerticalStackLayout Padding="30" Spacing="10" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
                    <Frame BackgroundColor="White" CornerRadius="50" Padding="10" HeightRequest="90" WidthRequest="90" HasShadow="True">
                        <Label Text="🛍️" FontSize="40" HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Frame>
                    <Label Text="Actualmente no hay bolsas disponibles"
                           FontSize="15"
                           TextColor="#555"
                           HorizontalTextAlignment="Center"
                           FontFamily="OpenSansRegular"/>
                    <Label Text="Este restaurante pronto tendrá más sorpresas para ti"
                           FontSize="13"
                           FontAttributes="Italic"
                           TextColor="#789262"
                           HorizontalTextAlignment="Center"
                           FontFamily="OpenSansRegular"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10"
               Margin="0,10"
               BackgroundColor="White"
               CornerRadius="15"
               HasShadow="True"
               BorderColor="#E0E0E0"
               HeightRequest="100">
                        <Grid ColumnDefinitions="Auto,*"
                  ColumnSpacing="15"
                  VerticalOptions="Center"
                  HeightRequest="100">

                            <!-- IMAGEN DE LA BOLSA -->
                            <Image Source="surprisebag.png"
                       WidthRequest="80"
                       HeightRequest="80"
                       Aspect="AspectFit"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"/>

                            <!-- INFO -->
                            <VerticalStackLayout Grid.Column="1"
                                     Spacing="4"
                                     VerticalOptions="Center"
                                     Padding="0">
                                <!-- DESCRIPCIÓN -->
                                <Label Text="{Binding Description}"
                           FontSize="15"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           FontFamily="OpenSansRegular"
                           LineBreakMode="TailTruncation" />

                                <!-- PRECIO -->
                                <Label Text="{Binding Price, StringFormat='₡{0:N2}'}"
                           FontSize="14"
                           TextColor="#789262"
                           FontAttributes="Bold"
                           FontFamily="OpenSansSemibold" />

                                <!-- BOTÓN COMPRAR -->
                                <Button Text="Comprar"
                            BackgroundColor="#789262"
                            TextColor="White"
                            CornerRadius="8"
                            FontSize="13"
                            FontAttributes="Bold"
                            HeightRequest="34"
                            WidthRequest="120"
                            Padding="0"
                            HorizontalOptions="Start"
                            CommandParameter="{Binding}"
                            Clicked="OnComprarClicked" />
                            </VerticalStackLayout>

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </Grid>
</ContentPage>
