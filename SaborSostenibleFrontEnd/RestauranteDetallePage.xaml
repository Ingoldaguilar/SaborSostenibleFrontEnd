                Padding = new Thickness(20),
                Spacing = 20,
                Children =
                {
                    new Image
                    {
                        Source = restaurante.imagen,
                        HeightRequest = 200,
                        Aspect = Aspect.AspectFill,
                        Margin = new Thickness(0,0,0,10),
                        Clip = new RoundRectangleGeometry
                        {
                            CornerRadius = new CornerRadius(20),
                            Rect = new Rect(0, 0, 2000, 200)
                        }
                    },

                    new Label
                    {
